@model GestionPolizas

@{
    ViewData["Title"] = "Crear Póliza";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Crear Nueva Póliza</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="IdCliente" class="form-label">Cliente</label>
                            <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.Clientes">
                                <option value="">Seleccione un cliente</option>
                            </select>
                            <span asp-validation-for="IdCliente" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label"></label>
                            <input asp-for="Categoria" class="form-control" placeholder="Ingrese la categoría" />
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaInicio" class="form-label"></label>
                            <input asp-for="FechaInicio" type="date" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaFin" class="form-label"></label>
                            <input asp-for="FechaFin" type="date" class="form-control" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Condiciones" class="form-label"></label>
                            <textarea asp-for="Condiciones" class="form-control" rows="3" placeholder="Ingrese las condiciones"></textarea>
                            <span asp-validation-for="Condiciones" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrimaMensual" class="form-label"></label>
                            <input asp-for="PrimaMensual" class="form-control" placeholder="Ingrese la prima mensual" />
                            <span asp-validation-for="PrimaMensual" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label"></label>
                            <select asp-for="Estado" class="form-select">
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Crear Póliza</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

