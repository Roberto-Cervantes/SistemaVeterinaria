@model IEnumerable<GestionPolizas>

@{
    ViewData["Title"] = "Listado de Pólizas";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Gestión de Pólizas</h2>
        <a asp-action="Create" class="btn btn-primary">Nueva Póliza</a>
    </div>

    <table class="table table-striped table-hover shadow">
        <thead class="table-dark">
            <tr>
                <th>Cliente</th>
                <th>Categoría</th>
                <th>Fecha de Inicio</th>
                <th>Fecha de Fin</th>
                <th>Condiciones</th>
                <th>Prima Mensual</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Clientes.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                    <td>@Html.DisplayFor(modelItem => item.Condiciones)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrimaMensual)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPoliza" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdPoliza" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdPoliza" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
