@model Clientes

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">Detalle del Cliente</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th>Nombre</th>
                                <td>@Html.DisplayFor(model => model.Nombre)</td>
                            </tr>
                            <tr>
                                <th>Dirección</th>
                                <td>@Html.DisplayFor(model => model.Direccion)</td>
                            </tr>
                            <tr>
                                <th>Teléfono</th>
                                <td>@Html.DisplayFor(model => model.Telefono)</td>
                            </tr>
                            <tr>
                                <th>Correo</th>
                                <td>@Html.DisplayFor(model => model.Correo)</td>
                            </tr>
                            <tr>
                                <th>Fecha de Registro</th>
                                <td>@Html.DisplayFor(model => model.FechaRegistro)</td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                <td>@Html.DisplayFor(model => model.Activo)</td>
                            </tr>
                        </table>
                    </div>
                    <div class="mt-3 text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
