@model Permisos

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Permisos</h1>

<h4>Permiso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPermiso" />
            
            <div class="form-group">
                <label asp-for="Modulo" class="control-label"></label>
                <input asp-for="Modulo" class="form-control" />
                <span asp-validation-for="Modulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Accion" class="control-label"></label>
                <input asp-for="Accion" class="form-control" />
                <span asp-validation-for="Accion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdRol" class="control-label"></label>
                <select asp-for="IdRol" asp-items="ViewBag.Roles" class="form-control"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
