@model Permisos

@{
    ViewData["Title"] = "Eliminar Permiso";
}

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Eliminar Permiso</h4>
    </div>
    <div class="card-body">
        <h5>¿Está seguro que desea eliminar este permiso?</h5>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Módulo</label>
                    <p>@Html.DisplayFor(model => model.Modulo)</p>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Acción</label>
                    <p>@Html.DisplayFor(model => model.Accion)</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Rol</label>
                    <p>@Html.DisplayFor(model => model.Roles.NombreRol)</p>
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdPermiso" />
            <button type="submit" class="btn btn-danger">Eliminar Permiso</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>
