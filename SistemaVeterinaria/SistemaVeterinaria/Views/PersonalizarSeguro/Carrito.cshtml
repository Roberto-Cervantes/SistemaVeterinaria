@model List<SistemaVeterinaria.Controllers.SeguroPersonalizado>
@{
    ViewData["Title"] = "Carrito de Seguros";
}

<h1 class="text-center">Carrito de Seguros</h1>

@if (Model.Count > 0)
{
    <table class="table table-bordered shadow-sm mt-4">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Categoría</th>
                <th>Periodo (meses)</th>
                <th>Coberturas Adicionales</th>
                <th>Costo Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var seguro in Model)
            {
                <tr>
                    <td>@seguro.ClienteId</td>
                    <td>@seguro.Categoria</td>
                    <td>@seguro.Periodo</td>
                    <td>@string.Join(", ", seguro.CoberturasAdicionales)</td>
                    <td>$@seguro.CostoTotal.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center mt-5">No hay seguros en el carrito.</p>
}
