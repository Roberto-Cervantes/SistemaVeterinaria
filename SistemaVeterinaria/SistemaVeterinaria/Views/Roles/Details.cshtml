@model Roles

@{
    ViewData["Title"] = "Detalle del Rol";
}

<div class="card shadow">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">Detalle del Rol</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Nombre del Rol</dt>
            <dd class="col-sm-8">@Model.NombreRol</dd>

            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>
        </dl>
        <div class="d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.IdRol" class="btn btn-primary me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
