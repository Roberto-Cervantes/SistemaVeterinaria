@model Roles

@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Eliminar Rol</h4>
    </div>
    <div class="card-body">
        <p class="text-warning">¿Está seguro de que desea eliminar este rol? Esta acción no se puede deshacer.</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nombre del Rol</dt>
            <dd class="col-sm-8">@Model.NombreRol</dd>

            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>
        </dl>
        <div class="d-flex justify-content-end">
            <form asp-action="Delete" method="post" class="me-2">
                <input type="hidden" asp-for="IdRol" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</div>
