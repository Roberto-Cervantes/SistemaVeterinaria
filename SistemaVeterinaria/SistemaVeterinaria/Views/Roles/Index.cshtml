@model IEnumerable<Roles>

@{
    ViewData["Title"] = "Listado de Roles";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Gestión de Roles</h2>
        <a asp-action="Create" class="btn btn-primary">Nuevo Rol</a>
    </div>

    <table class="table table-striped table-hover shadow">
        <thead class="table-dark">
            <tr>
                <th>Nombre del Rol</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreRol)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdRol" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdRol" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdRol" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
