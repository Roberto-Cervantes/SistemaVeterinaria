<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora de Seguros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function calcularSeguro() {
            const seguros = {
                'Seguro de Vida': 150,
                'Seguro para Automóvil': 300,
                'Seguro de Hogar': 250,
                'Seguro Médico': 400
            };

            const coberturas = {
                'Robo': 50,
                'Incendio': 75,
                'Daños a terceros': 100,
                'Asistencia Legal': 120
            };

            const seguroSeleccionado = document.getElementById('tipoSeguro').value;
            const años = parseInt(document.getElementById('anios').value);
            const coberturasSeleccionadas = Array.from(document.querySelectorAll('input[name="cobertura"]:checked'));

            if (!seguros[seguroSeleccionado] || !años) {
                document.getElementById('resultado').innerText = 'Por favor, completa todos los campos.';
                return;
            }

            let total = seguros[seguroSeleccionado] * años;

            coberturasSeleccionadas.forEach(cobertura => {
                total += coberturas[cobertura.value] * años;
            });

            document.getElementById('resultado').innerText = `El precio aproximado es: $${total}`;
        }
    </script>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="display-4">Calculadora de Seguros</h1>
            <p class="lead">Obtén una cotización aproximada según tus necesidades.</p>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="tipoSeguro" class="form-label">Seleccione el tipo de seguro</label>
                        <select class="form-select" id="tipoSeguro">
                            <option value="">-- Seleccionar --</option>
                            <option value="Seguro de Vida">Seguro de Vida ($150/año)</option>
                            <option value="Seguro para Automóvil">Seguro para Automóvil ($300/año)</option>
                            <option value="Seguro de Hogar">Seguro de Hogar ($250/año)</option>
                            <option value="Seguro Médico">Seguro Médico ($400/año)</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="anios" class="form-label">Cantidad de años</label>
                        <input type="number" class="form-control" id="anios" min="1" placeholder="Ingrese el número de años">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Coberturas adicionales</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="cobertura" value="Robo" id="coberturaRobo">
                            <label class="form-check-label" for="coberturaRobo">Robo ($50/año)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="cobertura" value="Incendio" id="coberturaIncendio">
                            <label class="form-check-label" for="coberturaIncendio">Incendio ($75/año)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="cobertura" value="Daños a terceros" id="coberturaDanios">
                            <label class="form-check-label" for="coberturaDanios">Daños a terceros ($100/año)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="cobertura" value="Asistencia Legal" id="coberturaLegal">
                            <label class="form-check-label" for="coberturaLegal">Asistencia Legal ($120/año)</label>
                        </div>
                    </div>

                    <button type="button" class="btn btn-primary w-100" onclick="calcularSeguro()">Calcular</button>
                </form>

                <div class="mt-4 text-center">
                    <h3 id="resultado">El precio aproximado aparecerá aquí.</h3>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
