@model Reclamos

@{
    ViewData["Title"] = "Crear Reclamo";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Crear Reclamo</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="IdPoliza"></label>
                <select asp-for="IdPoliza" class="form-control" asp-items="ViewBag.GestionPolizas">
                    <option value="">Seleccione un cliente</option>
                </select>
                <span asp-validation-for="IdPoliza" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Ingrese Descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaReclamo"></label>
                <input asp-for="FechaReclamo" class="form-control" type="date" />
                <span asp-validation-for="FechaReclamo  " class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label asp-for="Estado"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div> *@

            <div class="form-group form-check">
                <input asp-for="Estado" class="form-check-input" type="checkbox" />
                <label asp-for="Estado" class="form-check-label">Estado</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="FechaResolucion"></label>
                <input asp-for="FechaResolucion" class="form-control" type="date" />
                <span asp-validation-for="FechaResolucion" class="text-danger"></span>
            </div>       
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Crear Reclamo</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
