@model IEnumerable<Usuarios>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Gestión de Usuarios</h2>
        <a asp-action="Create" class="btn btn-primary">Nuevo Usuario</a>
    </div>

    <table class="table table-striped table-hover shadow">
        <thead class="table-dark">
            <tr>
                <th>Nombre de Usuario</th>
                <th>Rol</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.nombreUsuario</td>
                    <td>@usuario.Rol</td>
                    <td>@usuario.EstadoUsuario</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@usuario.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@usuario.IdUsuario" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@usuario.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
