@model Usuarios

@{
    ViewData["Title"] = "Detalle del Usuario";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">Detalle del Usuario</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th>Nombre de Usuario</th>
                                <td>@Html.DisplayFor(model => model.nombreUsuario)</td>
                            </tr>
                            <tr>
                                <th>Rol</th>
                                <td>@Html.DisplayFor(model => model.Rol)</td>
                            </tr>
                            <tr>
                                <th>Estado</th>
                                <td>@Html.DisplayFor(model => model.EstadoUsuario)</td>
                            </tr>
                        </table>
                    </div>
                    <div class="mt-3 text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
